<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                                          

                                                                 

                 
                        
                                                                 
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" android:tag="layout/activity_set_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textSize="@dimen/textSize24" />
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_1"      
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:textSize="@dimen/textSize24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textSize="@dimen/textSize24"/>
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_2"      
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:textSize="@dimen/textSize24"/>
        </LinearLayout>
        <EditText
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user_tips"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pass_tips"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/set"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/set"
            android:layout_marginTop="30dp"
            android:tag="binding_3"                       />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop">
            <Button
                android:id="@+id/tologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toLogin"
                android:tag="binding_4"                    />
            <Button
                android:id="@+id/settohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toHome"
                android:layout_marginLeft="@dimen/layout_marginLeft" />
            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:tag="binding_5"                    />
        </LinearLayout>
    </LinearLayout>
         