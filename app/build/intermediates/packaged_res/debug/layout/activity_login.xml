<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                       

    
                                          

                                                                 

                 
                          
                                                                   
           
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:tag="layout/activity_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_1"        
            android:textSize="@dimen/textSize30"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:textColor="@color/black"
                                                     
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/currentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theUser"
            android:textSize="@dimen/textSize30"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/mUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:textSize="@dimen/textSize30"
            android:tag="binding_2"         
            android:layout_marginTop="@dimen/layout_marginTop"
            app:layout_constraintLeft_toRightOf="@id/currentUser"
            app:layout_constraintTop_toBottomOf="@+id/tv1"/>
        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user_tips"
            android:layout_marginTop="@dimen/layout_marginTop"
            app:layout_constraintTop_toBottomOf="@+id/currentUser"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pass_tips"
            android:layout_marginTop="@dimen/layout_marginTop"
            app:layout_constraintTop_toBottomOf="@+id/et1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:tag="binding_3"                       
            android:text="@string/login"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/et2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/toset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toSet"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/logintohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toHome"
                app:layout_constraintLeft_toRightOf="@id/toset"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:tag="binding_4"                    
                                                                             
                app:layout_constraintLeft_toRightOf="@id/logintohome"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

         