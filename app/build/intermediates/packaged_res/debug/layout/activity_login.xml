<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                       

    
                                          

                                                                 

                 
                          
                                                                   
           
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" android:tag="layout/activity_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_1"        
            android:textSize="@dimen/textSize30"
            android:textColor="@color/black"
                                                     />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theUser"
                android:textSize="@dimen/textSize30"/>
            <TextView
                android:id="@+id/mUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:textSize="@dimen/textSize30"
                android:tag="binding_2"         />
        </LinearLayout>
        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/user_tips"
            android:layout_marginTop="@dimen/layout_marginTop" />
        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pass_tips"
            android:layout_marginTop="@dimen/layout_marginTop" />
        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:tag="binding_3"                       
            android:text="@string/login"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop">
            <Button
                android:id="@+id/toset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toSet" />
            <Button
                android:id="@+id/logintohome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toHome"
                android:layout_marginLeft="@dimen/layout_marginLeft" />
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:tag="binding_4"                    
                                                                             />
        </LinearLayout>
    </LinearLayout>

         